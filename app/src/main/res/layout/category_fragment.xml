<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56dp"
        android:background="@color/colorMenu"
        android:paddingLeft="@dimen/dimen_16dp"
        android:paddingRight="@dimen/dimen_16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/daily_news"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_title" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <LinearLayout
                android:id="@+id/lin_eco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/vertical_margin">

                <ImageView
                    android:id="@+id/img_economy"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_economy_sub" />

                <TextView
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:gravity="center"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Economy"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_bussines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/vertical_margin">

                <ImageView
                    android:id="@+id/img_bussines"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_business_sub" />

                <TextView
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:gravity="center|top"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Business"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_tec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/vertical_margin">

                <ImageView
                    android:id="@+id/img_tecnology"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_technology_sub" />


                <TextView
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:gravity="center|top"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Technology"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_eng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/vertical_margin">

                <ImageView
                    android:id="@+id/img_engineering"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_engineering_sub" />

                <TextView
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:gravity="center|top"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Engineering"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_pol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/vertical_margin">

                <ImageView
                    android:id="@+id/img_political"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_political_sub" />


                <TextView
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:gravity="center|top"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Political"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_10sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lin_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/vertical_margin">

                <ImageView
                    android:id="@+id/img_group"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_manual_sub" />


                <TextView
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:gravity="center|top"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Manual"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_hel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/vertical_margin">


                <ImageView
                    android:id="@+id/img_heartbeat"
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_healthy_sub" />


                <TextView
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:gravity="center|top"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Healthy"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/vertical_margin">

                <ImageView
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_economy_sub" />

                <TextView
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:gravity="center|top"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Manual"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_10sp" />
            </LinearLayout>


        </GridLayout>
    </LinearLayout>
</LinearLayout>
